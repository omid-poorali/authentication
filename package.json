{
  "name": "authentication",
  "version": "1.0.0",
  "repository": "https://github.com/omid-poorali/authentication.git",
  "author": "omid-poorali",
  "license": "MIT",
  "scripts": {
    "dev": "SET \"NODE_ENV=development\" && ts-node-dev -r dotenv/config -r tsconfig-paths/register --respawn --transpile-only src/server.ts",
    "start": "SET \"NODE_ENV=production\" && ts-node -r dotenv/config -r tsconfig-paths/register --transpile-only  src/server.ts",
    "build": "tsc --pretty --noEmit",
    "lint": "eslint --fix",
    "format": "prettier --write .",
    "test": "SET \"NODE_ENV=test\" && jest --detectOpenHandles --passWithNoTests",
    "test:watch": "SET \"NODE_ENV=test\" && jest --detectOpenHandles --forceExit  --watchAll",
    "test:coverage": "SET \"NODE_ENV=test\" && jest --coverage --detectOpenHandles"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/config": "^3.3.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.1",
    "@types/pino": "^7.0.5",
    "bcrypt": "^5.1.1",
    "config": "^3.3.12",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "eslint": "^9.16.0",
    "@eslint/js": "^9.16.0",
    "globals": "^15.13.0",
    "typescript-eslint": "^8.17.0",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.3",
    "morgan": "^1.10.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "pretty-quick": "^4.0.0",
    "redis": "^4.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.4.0"
  }
}
